{
	"logs": {
		"logs_collected": {
			"files": {
				"collect_list": [
					{
						"file_path": "/var/log/cfn-init.log",
						"log_group_name": "/app/var/log/cfn-init.log"
					},
					{
						"file_path": "/var/log/cloud-init.log",
						"log_group_name": "/os/linux/var/log/cloud-init.log"
					},
					{
						"file_path": "/var/log/cron",
						"log_group_name": "/os/linux/var/log/cron"
					},
					{
						"file_path": "/var/log/dmesg",
						"log_group_name": "/os/linux/var/log/dmesg"
					},
					{
						"file_path": "/var/log/maillog",
						"log_group_name": "/os/linux/var/log/maillog"
					},
					{
						"file_path": "/var/log/messages",
						"log_group_name": "/os/linux/var/log/messages"
					},
					{
						"file_path": "/var/log/secure",
						"log_group_name": "/os/linux/var/log/secure"
					},
					{
						"file_path": "/var/log/yum.log",
						"log_group_name": "/os/linux/var/log/yum.log"
					},
					{
						"file_path": "/var/log/audit/audit.log",
						"log_group_name": "/os/linux/var/log/audit/audit.log"
					}
				]
			}
		}
	},
	"metrics": {
		"append_dimensions": {
			"AutoScalingGroupName": "${aws:AutoScalingGroupName}",
			"ImageId": "${aws:ImageId}",
			"InstanceId": "${aws:InstanceId}",
			"InstanceType": "${aws:InstanceType}"
		},
		"metrics_collected": {
			"cpu": {
				"measurement": [
					"cpu_usage_idle",
					"cpu_usage_iowait",
					"cpu_usage_user",
					"cpu_usage_system"
				],
				"metrics_collection_interval":
                {{ amazon_cloudwatch_agent_metrics_collection_interval }},
				"resources": [
					"*"
				],
				"totalcpu": false
			},
			"disk": {
				"measurement": [
					"used_percent",
					"inodes_free"
				],
				"metrics_collection_interval":
                {{ amazon_cloudwatch_agent_metrics_collection_interval }},
				"resources": [
					"*"
				]
			},
			"diskio": {
				"measurement": [
					"io_time",
					"write_bytes",
					"read_bytes",
					"writes",
					"reads"
				],
				"metrics_collection_interval":
                {{ amazon_cloudwatch_agent_metrics_collection_interval }},
				"resources": [
					"*"
				]
			},
			"mem": {
				"measurement": [
					"mem_used_percent"
				],
				"metrics_collection_interval":
                {{ amazon_cloudwatch_agent_metrics_collection_interval }}
			},
			"netstat": {
				"measurement": [
					"tcp_established",
					"tcp_time_wait"
				],
				"metrics_collection_interval":
                {{ amazon_cloudwatch_agent_metrics_collection_interval }}
			},
			"swap": {
				"measurement": [
					"swap_used_percent"
				],
				"metrics_collection_interval":
                {{ amazon_cloudwatch_agent_metrics_collection_interval }}
			}
		}
	}
}
